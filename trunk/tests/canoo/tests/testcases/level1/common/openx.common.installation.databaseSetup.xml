				&universal;
				<verifyText description="Check text on page" 
					text="Database Settings" />
				<!-- TODO: Error&options support (ifstep for MyISAM/InnoDB) -->
				<setinputfield description="set database username" 
					name="aConfig[database][username]"
					value="${db.login}" />

				<setinputfield description="set database password" 
					name="aConfig[database][password]"
					value="${db.password}" />
					
				<setinputfield description="set database name" 
					name="aConfig[database][name]"
					value="${db.name}" />

				<setinputfield description="set database host" 
					name="aConfig[database][host]"
					value="${db.host}" />

				<setinputfield description="set database port" 
					name="aConfig[database][port]"
					value="${db.port}" />
				
				<ifStep description="if mysql">
					<condition>
						<verifyProperty description="if mysql"
											name="db.type"
											propertyType="ant"
											text="mysql"
											regex="false" />
					</condition>
					<then>
						<setSelectField name="aConfig[database][type]" text="MySQL"/>
					</then>
					<else>
						<setSelectField name="aConfig[database][type]" text="PostgreSQL"/>
					</else>
				</ifStep>	
				
				<clickButton description="Click 'Continue »' button" 
					label="Continue »"
					save="dbsetup_" />
				<verifyText description="Check text on page" 
					text="The OpenX database has now been created" />
				<clickButton description="Click 'Continue »' button"
					name="btn_configsetup" />
