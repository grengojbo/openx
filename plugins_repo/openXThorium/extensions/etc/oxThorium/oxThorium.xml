<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>oxThorium</name>
    <creationDate>2008-07-04</creationDate>
    <author>Bernard Lange</author>
    <authorEmail>bernard@openx.org</authorEmail>
    <authorUrl>http://www.openx.org</authorUrl>
    <license>license.txt</license>
    <description>Bid Service Interface for OpenX</description>
    <version>1.0.0-dev</version>
    <oxversion>2.7.8-dev</oxversion>
    <extends>admin</extends>

    <install>

        <syscheck>
            <php>
                <setting name='version'>4.3.11</setting>;
            </php>
        </syscheck>

        <files>
            <file path="{MODULEPATH}deliveryAdRender/oxThorium/">marketplace.php</file>
            <file path="{ADMINPATH}/css/">bid.css</file>
            <file path="{ADMINPATH}/js/">oxThorium.js</file>
            <file path="{ADMINPATH}/images/">bid.jpg</file>
            <file path="{ADMINPATH}/images/">sort-up.gif</file>
            <file path="{ADMINPATH}/images/">sort-down.gif</file>
            <file path="{ADMINPATH}/templates/">bid-account-edit.html</file>
            <file path="{ADMINPATH}/templates/">bid-preferences.html</file>
            <file path="{ADMINPATH}/templates/">bid-preferences-campaign.html</file>
            <file path="{ADMINPATH}/templates/">bid-preferences-website.html</file>
            <file path="{ADMINPATH}/templates/">campaign-script.html</file>
            <file path="{ADMINPATH}/templates/">creative-preferences-table.html</file>
            <file path="{ADMINPATH}/">bid-account-edit.php</file>
            <file path="{ADMINPATH}/">bid-common.php</file>
            <file path="{ADMINPATH}/">bid-preferences.php</file>
            <file path="{ADMINPATH}/">bid-preferences-campaign.php</file>
            <file path="{ADMINPATH}/">bid-preferences-website.php</file>
            <file path="{ADMINPATH}/">oxThorium.class.php</file>
        </files>

        <navigation>

            <!--admin>
                <menu addto="inventory" index="bid-preferences" link="plugins/oxThorium/bid-preferences.php">Marketplace</menu>
            </admin-->

            <manager>
                <!--menu addto="inventory" index="bid-preferences" link="plugins/oxThorium/bid-preferences.php">Marketplace</menu-->
                <!--menu addto="inventory" index="bid-account-edit" link="plugins/oxThorium/bid-account-edit.php">Marketplace Account</menu-->
                <!--menu addto="affiliate-index" index="bid-preferences-website"   link="plugins/oxThorium/bid-preferences-website.php?affiliateid={affiliateid}">Marketplace</menu-->
                <menu addto="advertiser-campaigns" index="bid-preferences-campaign"   link="plugins/oxThorium/bid-preferences-campaign.php?clientid={clientid}&amp;campaignid={campaignid}">Thorium</menu>
            </manager>

            <!--advertiser>
                <menu addto="inventory" index="bid-preferences" link="plugins/oxThorium/bid-preferences.php">Marketplace</menu>
            </advertiser-->

            <!--trafficker>
                <menu addto="inventory" index="bid-preferences" link="plugins/oxThorium/bid-preferences.php">Marketplace</menu>
            </trafficker-->

        </navigation>

        <configuration option="Bid Service">
            <!-- todo - set proper hosts before final release and set visible ="0" -->
		    <setting key="thoriumHost" type="text" label="Thorium host" required="1" size="32" visible="1">thorium.localhost</setting>
		    <!-- bid.openx.net -->
		    <setting key="defaultFloorPrice" type="text" label="Default Campaign Floor Price" required="1" size="32" visible="1">0.01</setting>
        </configuration>

        <schema>
            <mdb2schema>tables_oxThorium</mdb2schema>
            <dboschema>db_schema</dboschema>
            <dbolinks>db_schema.links</dbolinks>
            <dataobject>Ext_thorium_campaign_pref.php</dataobject>
            <dataobject>Ext_thorium_website_pref.php</dataobject>
        </schema>

    </install>

</plugin>
