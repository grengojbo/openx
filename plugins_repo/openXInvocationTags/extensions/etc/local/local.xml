<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>local</name>
    <creationDate>2008-08-27</creationDate>
    <author>Lukasz Wikierski</author>
    <authorEmail>lukasz.wikierski@openx.org</authorEmail>
    <authorUrl>http://www.openx.org</authorUrl>
    <license>license.txt</license>
    <description>Local Mode Invocation Tag for OpenX</description>
    <version>1.0.0-dev</version>
    <oxversion>2.7.14-dev</oxversion>
    <extends>invocationTags</extends>

    <install>
        <files>
            <file path="{MODULEPATH}invocationTags/local/">local.class.php</file>
            
            <file path="{MODULEPATH}invocationTags/local/_lang/">de.php</file>
            <file path="{MODULEPATH}invocationTags/local/_lang/">en.php</file>
            <file path="{MODULEPATH}invocationTags/local/_lang/">es.php</file>
            <file path="{MODULEPATH}invocationTags/local/_lang/">ja.php</file>
        </files>

        <components>
           <component>
                <name>local</name>
           </component>
         </components>

        <configuration option="Local Mode Invocation Tag">
            <setting key="allowed" type="checkbox" label="Allow Local Mode Invocation Tag" required="0" size="1" visible="1">1</setting>
        </configuration>
    </install>

</plugin>
