<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>oxIndium</name>
    <creationDate>2008-07-11</creationDate>
    <author>Chris Nutting</author>
    <authorEmail>chris.nutting@openx.org</authorEmail>
    <authorUrl>http://www.openx.org</authorUrl>
    <license>license.txt</license>
    <description>OpenX Indium beacon service</description>
    <version>1.0.0-dev</version>
    <oxversion>2.7.5-dev</oxversion>
    <extends>deliveryAdRender</extends>

    <install>
        <files>
            <file path="{MODULEPATH}deliveryAdRender/oxIndium/">beaconService.delivery.php</file>
        </files>

        <components>
            <component>
                <name>beaconService</name>
                <hook>postAdRender</hook>
           </component>
        </components>

        <configuration>
            <!-- todo - set proper host before final release and set visible ="0" -->
		    <setting key="indiumHost" type="text" label="Indium Host" required="1" size="32" visible="1">indium.localhost</setting>
	    </configuration>

    </install>

</plugin>
