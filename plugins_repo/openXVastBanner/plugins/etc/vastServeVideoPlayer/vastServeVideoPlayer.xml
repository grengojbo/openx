<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href=""?>

<plugin>
    <name>vastServeVideoPlayer</name>
    <creationDate>2009-05-05</creationDate>
    <author>BouncingMinds</author>
    <authorEmail>enquiries@bouncingminds.com</authorEmail>
    <authorUrl>http://www.bouncingminds.com</authorUrl>
    <license>GPL</license>
    <description>Delivery Log Vast Plugin</description>
    <version>1.0rc2</version>
    <oxversion>2.7.30-beta-rc11</oxversion>

    <install>
        <syscheck>
        </syscheck>

        <files>
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">player.delivery.php</file>

	    <!-- player files below - these files should be moved to a cdn or different location when cache headers can be configured -->
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">flowplayer-3.0.5.min.js</file>
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">flowplayer.rtmp-3.0.2.swf</file>
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">flowplayer-3.0.5.swf</file>
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">jquery-1.3.1.min.js</file>
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">flowplayer.controls-3.0.3.swf</file>
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">jquery.scrollable-1.0.1.min.js</file>
            <file path="{MODULEPATH}deliveryLog/vastServeVideoPlayer/">flowplayer.playlist-3.0.3.min.js</file>
        </files>

        <configuration>
            <!-- only administrator has permissions to change settings in config file -->
            <!-- settings are written to a group section [oxMaxMindGeoIP] -->
            <setting key="path_to_videoplayer_swf_used_when_viewing_video_in_openx_admintool" type="text" label="Path to video player swf - (only used when viewing video in openX admin tool)" required="0" size="100" visible="1"></setting>
            <setting key="path_to_videoplayer_js_used_when_viewing_video_in_openx_admintool" type="text" label="Path to video player js - (only used when viewing video in openX admin tool)" required="0" size="100" visible="1"></setting>
            <setting key="path_to_videoplayer_rtmp_plugin_used_when_viewing_video_in_openx_admintool" type="text" label="Path to video player rtmp plugin - (only used when viewing video in openX admin tool)" required="0" size="100" visible="1"></setting>
            <setting key="path_to_videoplayer_controls_plugin_used_when_viewing_video_in_openx_admintool" type="text" label="Path to video player rtmp plugin - (only used when viewing video in openX admin tool)" required="0" size="100" visible="1"></setting>
            <setting key="auto_play_when_viewing_video_in_openx_admintool" type="text" label="Autoplay the video content (only used when viewing video in openX admin tool) - set to false to switch off" required="0" size="4" visible="1"></setting>
        </configuration>

        <components>
        </components>

    </install>


</plugin>
