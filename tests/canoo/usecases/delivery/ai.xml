<?xml version="1.0"?>
<!DOCTYPE project SYSTEM            "../../includes/WebTest.dtd" [
  <!ENTITY config SYSTEM            "../../includes/config.xml">
  <!ENTITY checkForErrors SYSTEM    "../../modules/errors.xml">
  <!ENTITY checkForImageGif SYSTEM  "../../modules/gif.xml">
]
>

<!--
  Test that ai.php returns binary data (returns what was in data field of images table)
-->
<project name="Openads delivery - ai.php" basedir="../.." default="main">
  <import file="../../includes/init.xml"/>
  <import file="${webtest.home}/lib/taskdef.xml"/>

  <target name="canoo-test">
    <testSpec name="Run Delivery">
      &config;
      <steps>
        <invoke description="Invoke delivery file" url="/delivery/ai.php?filename=468x60.gif&amp;contenttype=gif" />
        &checkForErrors;
        &checkForImageGif;
      </steps>

    </testSpec>
  </target>

  <!-- clean cache, run a canoo test (without cache), and then run again (with cache) -->
  <target name="main" depends="test-cache" />
  
</project>