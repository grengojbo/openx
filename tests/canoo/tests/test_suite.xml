	<target name="setup">
		<mkdir dir="${screens}" />
	</target>
	
	<target name="Level0" if="test.level0" depends="setup">
		<echo>Starting setup tests...</echo>
		<subant failonerror="${wt.failOnError}" inheritall="true">
        	<fileset dir="${testcase.dir}/level0" includes="${testcase.level0.pattern}"/>
        </subant>
		<echo>#################################</echo>		
		<echo># 0 level    tests - FINISHED!  #</echo>
		<echo>#################################</echo>				
	</target>
	
	<target name="Level1" if="test.level1" depends="Level0">
		<echo>Starting smoke tests - 1st level...</echo>
			<ant antfile="${testcase.dir}/level1/openx.smoke.xml" />
		<echo>###################################</echo>		
		<echo># 1st level smoke test - FINISHED!#</echo>
		<echo>###################################</echo>				
	</target>
	
    <target name="Level2" depends="Level1" if="test.level2">
		<echo>Starting smoke tests - 2nd level...</echo>
		<echo>+-----------------------------------------+</echo>
		<echo>| WARNING! 2nd Level tests are optional	 |</echo>
		<echo>| and could fail without BUILD FAILED!	 |</echo>
		<echo>+-----------------------------------------+</echo>
		<subant failonerror="${wt.failOnError}" inheritall="true">
        	<fileset dir="${testcase.dir}/level2" includes="${testcase.level2.pattern}"/>
        </subant>
		<echo>2nd level smoke tests finished - check for potential errors!</echo>
    </target>

    <target name="Level3" depends="Level2" if="test.level3">
		<echo>Starting acceptance tests - 3rd level...</echo>
		<echo>+-----------------------------------------+</echo>
		<echo>| WARNING! 3rd Level tests are optional	 |</echo>
		<echo>| and could fail without BUILD FAILED!	 |</echo>
		<echo>+-----------------------------------------+</echo>
		<subant failonerror="${wt.failOnError}" inheritall="true">
        	<fileset dir="${testcase.dir}/level3" includes="${testcase.level3.pattern}"/>
        </subant>
		<echo>3rd level acceptance tests finished - check for potential errors!</echo>
    </target>

</project>
