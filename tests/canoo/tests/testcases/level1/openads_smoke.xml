<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE project [
  <!ENTITY config  SYSTEM "file:../modules/config_openx.xml">
  <!ENTITY login  SYSTEM "file:../modules/login_admin.xml">
  <!ENTITY common_verification  SYSTEM "file:../modules/common_pages.xml">
]>

<project name="Smoke test level1 - deploy test" basedir="."	default="main">

	<target name="main">
		<webtest name="Level1 - Smoke test - deploy test">
			&config;
			<steps>
			<enableJavaScript enable="${wt.enableJS}" />
				&login;
				<invoke description="First page - login page" url="/" save="${screens}\start_"/>
				<verifyTitle description="Page title"
					text="${page.title}" />	

				<verifyText description="Check text on page" text="${page.text}" />
				&common_verification;
			</steps>
		</webtest>
	</target>
</project>