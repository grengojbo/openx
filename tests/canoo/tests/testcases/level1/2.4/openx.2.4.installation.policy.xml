				<ifStep description="policy screen is available in 2.4.x">
					<condition>
						<verifyProperty description="Verify property 'ver' contains the string '2.4'"
							name="ver"
							text="2.4"
							regex="false" />
					</condition>
					<then>
						&universal;
						<verifyText description="Check text on page" 
							text="Privacy Policy" />
							
						<ifStep description="'Synchronisation settings' option was removed in v2.5.67-beta-rc3">
							<condition>
								<verifyProperty description="Verify property 'ver' contains the string '2.6'"
									name="ver"
									text="2.4"
									regex="false" />
							</condition>
							<then>
								<verifyText description="Check text on page" 
									text="Synchronisation settings" />
							</then>
						</ifStep>
						
						<clickButton description="Click 'I Agree »' button"
							name="btn_syscheck" />
					</then>
				</ifStep>